---
interface Props {
	name: string;
	title: string;
	description: string;
	image?: string;
	linkedin?: string;
	email?: string;
	github?: string;
	education?: Array<{
		school: string;
		degree: string;
		period: string;
		gpa?: string;
		details?: string[];
	}>;
	experience?: Array<{
		company: string;
		position: string;
		period: string;
		location?: string;
		description?: string;
		achievements?: string[];
	}>;
	projects?: Array<{
		name: string;
		description: string;
		period?: string;
		image?: string;
		technologies?: string[];
		link?: string;
	}>;
	id: string;
	gradient: string;
	borderColorClass?: string;
}

const { name, title, description, image, linkedin, email, github, education = [], experience = [], projects = [], id, gradient, borderColorClass = "border-purple-500" } = Astro.props;
---

<section id={id} class="py-24 md:py-32 px-4 sm:px-6 lg:px-8 xl:px-12 bg-gray-50">
	<div class="max-w-7xl mx-auto">
		<!-- This grid should center its content -->
		<div class="grid md:grid-cols-2 gap-10 md:gap-12 lg:gap-16 items-center justify-items-center mb-20 md:mb-28">
			<div class="order-2 md:order-1 w-full max-w-xl">
				<div class={`inline-block mb-5 px-4 py-2 rounded-full ${gradient} text-white text-base font-semibold`}>
					{title}
				</div>
				<h2 class="text-5xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-gray-900 to-gray-700 bg-clip-text text-transparent">
					{name}
				</h2>
				<p class="text-xl md:text-2xl text-gray-600 leading-relaxed mb-8 md:mb-10">
					{description}
				</p>
				
				{(linkedin || email || github) && (
					<div class="flex flex-col gap-3 mb-0">
						{linkedin && (
							<a href={linkedin} target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 text-gray-700 hover:text-purple-600 transition-colors">
								<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
									<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
								</svg>
								<span class="text-lg md:text-xl">LinkedIn</span>
							</a>
						)}
						{email && (
							<a href={`mailto:${email}`} class="flex items-center gap-3 text-gray-700 hover:text-purple-600 transition-colors">
								<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
								</svg>
								<span class="text-lg md:text-xl">{email}</span>
							</a>
						)}
						{github && (
							<a href={github} target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 text-gray-700 hover:text-purple-600 transition-colors">
								<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
									<path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
								</svg>
								<span class="text-lg md:text-xl">GitHub</span>
							</a>
						)}
					</div>
				)}
			</div>
			
			<div class="order-1 md:order-2 w-full max-w-xl">
				<div class={`relative h-80 md:h-[500px] lg:h-[600px] rounded-2xl overflow-hidden shadow-2xl ${gradient}`}>
					{image ? (
						<img src={image} alt={name} class="w-full h-full object-cover" />
					) : (
						<div class="w-full h-full flex items-center justify-center">
							<div class="text-white text-6xl font-bold opacity-50">
								{name.charAt(0)}
							</div>
						</div>
					)}
				</div>
			</div>
		</div>
		
		{/* Education and Experience Section */}
		<div class="w-full -mx-4 sm:-mx-6 lg:-mx-8 xl:-mx-12">
			<div class="w-full px-4 sm:px-6 lg:px-8 xl:px-12">
				<div class="max-w-4xl">
					<div class="space-y-6 md:space-y-8">
						{/* Education Section */}
						{education.length > 0 && (
							<div>
								<h3 class="text-2xl md:text-3xl font-bold mb-4 text-gray-900">Education</h3>
								<div class="space-y-3">
									{education.map((edu, index) => (
										<div key={`edu-${index}`} class={`bg-white rounded-lg p-4 md:p-5 shadow-md hover:shadow-lg transition-shadow duration-200 border-l-4 ${borderColorClass}`}>
											<div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-2">
												<div class="flex-1">
													<h4 class="text-lg md:text-xl font-semibold text-gray-900">{edu.degree}</h4>
													<p class="text-base md:text-lg text-gray-700 font-medium mt-0.5">{edu.school}</p>
												</div>
												<div class="text-right mt-1 sm:mt-0">
													<span class="text-sm md:text-base text-gray-500 font-medium block">{edu.period}</span>
													{edu.gpa && (
														<span class="text-sm md:text-base text-gray-500 font-medium block mt-0.5">GPA: {edu.gpa}</span>
													)}
												</div>
											</div>
											{edu.details && edu.details.length > 0 && (
												<ul class="list-disc list-inside space-y-0.5 mt-2">
													{edu.details.map((detail, i) => (
														<li key={i} class="text-gray-600 text-sm md:text-base">{detail}</li>
													))}
												</ul>
											)}
										</div>
									))}
								</div>
							</div>
						)}

						{/* Work Experience Section */}
						{experience.length > 0 && (
							<div>
								<h3 class="text-2xl md:text-3xl font-bold mb-4 text-gray-900">Experience</h3>
								<div class="space-y-3">
									{experience.map((exp, index) => (
										<div key={`exp-${index}`} class={`bg-white rounded-lg p-4 md:p-5 shadow-md hover:shadow-lg transition-shadow duration-200 border-l-4 ${borderColorClass}`}>
											<div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-2">
												<div class="flex-1">
													<h4 class="text-lg md:text-xl font-semibold text-gray-900">{exp.position}</h4>
													<p class="text-base md:text-lg text-gray-700 font-medium mt-0.5">{exp.company}</p>
													{exp.location && (
														<p class="text-sm text-gray-500 mt-0.5">{exp.location}</p>
													)}
												</div>
												<span class="text-sm md:text-base text-gray-500 font-medium mt-1 sm:mt-0 sm:text-right">{exp.period}</span>
											</div>
											{exp.description && (
												<p class="text-gray-600 leading-relaxed text-base md:text-lg mb-2">{exp.description}</p>
											)}
											{exp.achievements && exp.achievements.length > 0 && (
												<ul class="list-disc list-inside space-y-0.5">
													{exp.achievements.map((achievement, i) => (
														<li key={i} class="text-gray-600 text-sm md:text-base">{achievement}</li>
													))}
												</ul>
											)}
										</div>
									))}
								</div>
							</div>
						)}
					</div>
				</div>
			</div>
		</div>

		{/* Projects Section - Full Width, Not Constrained */}
		{projects.length > 0 && (
			<div class="w-full -mx-4 sm:-mx-6 lg:-mx-8 xl:-mx-12 mt-12 md:mt-16">
				<div class="w-full px-4 sm:px-6 lg:px-8 xl:px-12">
					<h3 class="text-2xl md:text-3xl font-bold mb-6 md:mb-8 text-gray-900">Projects</h3>
					<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 md:gap-8 max-w-[1400px] mx-auto">
						{projects.map((project, index) => (
							<div key={`project-${index}`} class={`bg-white rounded-lg p-5 md:p-6 shadow-md hover:shadow-lg transition-shadow duration-200 border-l-4 ${borderColorClass}`}>
								<div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-3">
									<div class="flex-1">
										{project.link ? (
											<a href={project.link} target="_blank" rel="noopener noreferrer" class="text-xl md:text-2xl font-semibold text-gray-900 hover:text-purple-600 transition-colors inline-flex items-center gap-1.5">
												{project.name}
												<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
												</svg>
											</a>
										) : (
											<h4 class="text-xl md:text-2xl font-semibold text-gray-900">{project.name}</h4>
										)}
										{project.period && (
											<span class="text-base text-gray-500 font-medium block mt-1">{project.period}</span>
										)}
									</div>
								</div>
								<p class="text-gray-600 leading-relaxed text-lg md:text-xl mb-3" set:html={project.description.replace(/\n/g, '<br>')}></p>
								{project.image && (
									<div class="my-4 rounded-lg overflow-hidden">
										<img src={project.image} alt={project.name} class="w-full h-auto object-contain min-h-[250px] md:min-h-[300px]" />
									</div>
								)}
								{project.technologies && project.technologies.length > 0 && (
									<div class="flex flex-wrap gap-2 mt-3">
										{project.technologies.map((tech, i) => (
											<span key={i} class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-base font-medium">
												{tech}
											</span>
										))}
									</div>
								)}
							</div>
						))}
					</div>
				</div>
			</div>
		)}
	</div>
</section>

<script define:vars={{ sectionId: id }}>
	// Scroll-triggered fade-in animation for PersonCard
	function initPersonCardAnimation() {
		const section = document.getElementById(sectionId);
		if (!section) return;

		// Add initial state - ensure it starts hidden
		section.classList.add('fade-in-delay');

		// Intersection Observer for scroll animations
		const observer = new IntersectionObserver(
			(entries) => {
				entries.forEach((entry) => {
					if (entry.isIntersecting) {
						entry.target.classList.add('visible');
						// Optional: unobserve after animation to improve performance
						observer.unobserve(entry.target);
					}
				});
			},
			{
				threshold: 0.1, // Trigger when 10% of the element is visible
				rootMargin: '0px 0px -50px 0px', // Start animation slightly before element enters viewport
			}
		);

		observer.observe(section);
	}

	// Run when DOM is ready
	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', initPersonCardAnimation);
	} else {
		// DOM is already ready
		initPersonCardAnimation();
	}
</script>

