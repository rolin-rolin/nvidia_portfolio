---

<section class="relative h-screen w-screen flex items-center justify-center bg-gradient-to-br from-purple-50 via-white to-blue-50 overflow-hidden">
	<div class="absolute inset-0 overflow-hidden">
		<div class="absolute -top-40 -right-40 w-80 h-80 bg-purple-300 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob"></div>
		<div class="absolute -bottom-40 -left-40 w-80 h-80 bg-blue-300 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-2000"></div>
		<div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-pink-300 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-4000"></div>
	</div>
	
	{/* Left Video - Absolutely Positioned */}
	<div class="hidden md:block absolute left-8 md:left-16 lg:left-24 xl:left-32 top-1/2 -translate-y-1/2 z-10 hero-left-video">
		<div class="relative aspect-[9/16] h-[70vh] max-h-[800px] border-4 border-gray-300 rounded-lg overflow-hidden bg-gray-100">
			<video 
				class="w-full h-full object-cover" 
				muted 
				autoplay 
				loop 
				playsinline
				style="display: none;"
				id="left-video"
			>
				<source src="/nvidia_website/left-video.MP4" type="video/mp4">
				Your browser does not support the video tag.
			</video>
			<div id="left-video-placeholder" class="w-full h-full flex items-center justify-center text-gray-400 text-sm">
				<div class="text-center p-4">
					<svg class="w-12 h-12 mx-auto mb-2 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
					</svg>
					<p>Left Video</p>
					<p class="text-xs mt-1">Place video.mp4 in public/</p>
				</div>
			</div>
		</div>
	</div>

	{/* Center Content - Centered */}
	<div class="relative z-10 w-full max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center hero-content">
		<h1 class="text-5xl md:text-7xl font-bold mb-8 md:mb-10 bg-gradient-to-r from-purple-600 via-pink-600 to-blue-600 bg-clip-text text-transparent hero-title">
			Hello!
		</h1>
		<p class="text-xl md:text-2xl text-gray-600 mb-12 md:mb-14 max-w-3xl mx-auto leading-relaxed hero-description">
			We're Ron and Andoni, two Juniors at the University of Notre Dame. We're stoked at the chance to apply to Nvidia's Technical Product Management Internship together!
		</p>
		<div class="flex flex-col sm:flex-row gap-4 md:gap-6 justify-center hero-cta">
			<a href="#person1" class="px-8 md:px-10 py-3 md:py-4 bg-gradient-to-r from-purple-600 to-blue-600 text-white rounded-full font-semibold hover:shadow-lg transform hover:scale-105 transition-all duration-200 text-lg">
				Check out our experience
			</a>
		</div>
	</div>

	{/* Right Video - Absolutely Positioned */}
	<div class="hidden md:block absolute right-8 md:right-16 lg:right-24 xl:right-32 top-1/2 -translate-y-1/2 z-10 hero-right-video">
		<div class="relative aspect-[9/16] h-[70vh] max-h-[800px] border-4 border-gray-300 rounded-lg overflow-hidden bg-gray-100">
			<video 
				class="w-full h-full object-cover" 
				muted 
				autoplay 
				loop 
				playsinline
				style="display: none;"
				id="right-video"
			>
				<source src="/nvidia_website/right-video.MP4" type="video/mp4">
				Your browser does not support the video tag.
			</video>
			<div id="right-video-placeholder" class="w-full h-full flex items-center justify-center text-gray-400 text-sm">
				<div class="text-center p-4">
					<svg class="w-12 h-12 mx-auto mb-2 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
					</svg>
					<p>Right Video</p>
					<p class="text-xs mt-1">Place video.mp4 in public/</p>
				</div>
			</div>
		</div>
	</div>

	<script>
		// Check if videos exist and show them, hide placeholders
		const leftVideo = document.getElementById('left-video');
		const rightVideo = document.getElementById('right-video');
		const leftPlaceholder = document.getElementById('left-video-placeholder');
		const rightPlaceholder = document.getElementById('right-video-placeholder');

		if (leftVideo) {
			leftVideo.addEventListener('loadeddata', () => {
				leftVideo.style.display = 'block';
				if (leftPlaceholder) leftPlaceholder.style.display = 'none';
			});
			leftVideo.addEventListener('canplay', () => {
				leftVideo.style.display = 'block';
				if (leftPlaceholder) leftPlaceholder.style.display = 'none';
			});
			leftVideo.addEventListener('error', () => {
				// Video failed to load, keep placeholder visible
				console.error('Left video failed to load. Make sure /left-video.MP4 exists in the public folder.');
			});
			// Try to load the video
			leftVideo.load();
		}

		if (rightVideo) {
			rightVideo.addEventListener('loadeddata', () => {
				rightVideo.style.display = 'block';
				if (rightPlaceholder) rightPlaceholder.style.display = 'none';
			});
			rightVideo.addEventListener('error', () => {
				// Video failed to load, keep placeholder visible
			});
		}

		// Hero fade-in animation on page load
		function initHeroAnimations() {
			const heroTitle = document.querySelector('.hero-title');
			const heroDescription = document.querySelector('.hero-description');
			const heroCta = document.querySelector('.hero-cta');
			const leftVideo = document.querySelector('.hero-left-video');
			const rightVideo = document.querySelector('.hero-right-video');

			// Longer fade duration (2 seconds)
			const fadeDuration = '2s';
			const fadeDelay1 = '0.3s';
			const fadeDelay2 = '0.6s';
			const fadeDelay4 = '0.2s';
			const fadeDelay5 = '0.2s';

			// Set transitions
			if (heroTitle) {
				heroTitle.style.transition = `opacity ${fadeDuration} ease-out, transform ${fadeDuration} ease-out`;
			}
			if (heroDescription) {
				heroDescription.style.transition = `opacity ${fadeDuration} ease-out ${fadeDelay1}, transform ${fadeDuration} ease-out ${fadeDelay1}`;
			}
			if (heroCta) {
				heroCta.style.transition = `opacity ${fadeDuration} ease-out ${fadeDelay2}, transform ${fadeDuration} ease-out ${fadeDelay2}`;
			}
			if (leftVideo) {
				leftVideo.style.transition = `opacity ${fadeDuration} ease-out ${fadeDelay4}, transform ${fadeDuration} ease-out ${fadeDelay4}`;
			}
			if (rightVideo) {
				rightVideo.style.transition = `opacity ${fadeDuration} ease-out ${fadeDelay5}, transform ${fadeDuration} ease-out ${fadeDelay5}`;
			}

			// Trigger animations after a brief delay to ensure styles are applied
			requestAnimationFrame(() => {
				setTimeout(() => {
					if (heroTitle) {
						heroTitle.style.opacity = '1';
						heroTitle.style.transform = 'translateY(0)';
					}
					if (heroDescription) {
						heroDescription.style.opacity = '1';
						heroDescription.style.transform = 'translateY(0)';
					}
					if (heroCta) {
						heroCta.style.opacity = '1';
						heroCta.style.transform = 'translateY(0)';
					}
					if (leftVideo) {
						leftVideo.style.opacity = '1';
						leftVideo.style.transform = 'translateX(0)';
					}
					if (rightVideo) {
						rightVideo.style.opacity = '1';
						rightVideo.style.transform = 'translateX(0)';
					}
				}, 50);
			});
		}

		// Run when DOM is ready
		if (document.readyState === 'loading') {
			document.addEventListener('DOMContentLoaded', initHeroAnimations);
		} else {
			// DOM is already ready
			initHeroAnimations();
		}
	</script>
	
	<div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
		<svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
		</svg>
	</div>
</section>

<style>
	@keyframes blob {
		0%, 100% {
			transform: translate(0px, 0px) scale(1);
		}
		33% {
			transform: translate(30px, -50px) scale(1.1);
		}
		66% {
			transform: translate(-20px, 20px) scale(0.9);
		}
	}
	
	.animate-blob {
		animation: blob 7s infinite;
	}
	
	.animation-delay-2000 {
		animation-delay: 2s;
	}
	
	.animation-delay-4000 {
		animation-delay: 4s;
	}

	/* Ensure hero elements start hidden */
	.hero-title,
	.hero-description,
	.hero-cta {
		opacity: 0;
		transform: translateY(20px);
	}

	.hero-left-video,
	.hero-right-video {
		opacity: 0;
	}

	.hero-left-video {
		transform: translateX(-30px);
	}

	.hero-right-video {
		transform: translateX(30px);
	}
</style>

